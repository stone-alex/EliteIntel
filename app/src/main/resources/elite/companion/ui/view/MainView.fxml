<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="500.0" minWidth="800.0" prefHeight="627.0" prefWidth="800" spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="elite.companion.ui.controller.MainController">
    <HBox alignment="CENTER" spacing="10">
        <children>
            <Label alignment="CENTER" style="-fx-font-size: 24px" text="Elite Companion" />
        </children>
    </HBox>
    <GridPane prefHeight="119.0" prefWidth="800.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="-Infinity" minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="-Infinity" prefWidth="250.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <TextField fx:id="googleApiKeyField" prefHeight="31.0" promptText="Google API Key" GridPane.columnIndex="1" />
            <TextField fx:id="grokApiKeyField" prefHeight="31.0" promptText="Grok" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="edsmApiKeyField" promptText="EDSM Key" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <CheckBox fx:id="lockGoogleKeyFieldCheckBox" mnemonicParsing="false" onMouseClicked="#onLockGoogleKeyMouseClicked" text="Unlock" GridPane.columnIndex="2" />
            <CheckBox fx:id="lockGrokFieldCheckBox" mnemonicParsing="false" onMouseClicked="#lockGrokKeyMouseClicked" text="Unlock" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <CheckBox fx:id="lockEdsmFieldCheckBox" mnemonicParsing="false" onMouseClicked="#onLockEdsmMouseClicked" text="Unlock" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        </children>
    </GridPane>
    <GridPane alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Button fx:id="testVoiceButton" onAction="#testVoice" text="Test Voice Trigger" />
            <Button fx:id="saveButton" alignment="CENTER" onAction="#saveApiKey" prefHeight="31.0" prefWidth="178.0" text="Save" GridPane.columnIndex="2" />
            <CheckBox fx:id="minimizeCheckBox" contentDisplay="CENTER" text="Minimize for VR" GridPane.columnIndex="1" />
        </children>
    </GridPane>
    <TextArea fx:id="journalLog" editable="false" prefHeight="415.0" prefWidth="800.0" wrapText="true" />
</VBox>
