<configuration scan="true">
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

    <!-- Register custom converter -->
    <conversionRule conversionWord="loggerColor" converterClass="elite.intel.util.LoggerColorConverter"/>

    <!-- Properties for flexibility -->
    <property name="APP_LOG_LEVEL" value="${APP_LOG_LEVEL:-DEBUG}"/>
    <property name="LOG_FILE_PATH" value="./logs/elite-intel.log"/>

    <!-- Suppress noisy third-party logs -->
    <logger name="io.grpc" level="WARN"/>
    <logger name="io.grpc.netty" level="WARN"/>
    <logger name="io.grpc.netty.shaded" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="com.google" level="WARN"/>
    <logger name="ch.qos.logback" level="ERROR"/>

    <!-- Specific logger levels -->
    <logger name="elite.intel.gameapi.JournalParser" level="INFO"/>
    <logger name="elite.intel.gameapi.AuxiliaryFilesMonitor" level="ERROR"/>
    <logger name="elite.intel.ai.hands.KeyBindingsParser" level="ERROR"/>
    <logger name="elite.intel.ai.brain.grok.GrokCommandEndPoint" level="DEBUG"/>
    <logger name="elite.intel.session.SessionPersistence" level="ERROR"/>
    <logger name="elite.intel.ai.ConfigManager" level="ERROR"/>
    <logger name="elite.intel.ai.ears.google.GoogleSTTImpl" level="ERROR"/>
    <logger name="elite.intel.ai.mouth.google.GoogleTTSImpl" level="ERROR"/>

    <!-- Set your app to DEBUG explicitly -->
    <logger name="elite.intel" level="DEBUG"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %loggerColor(%logger{36}) - %replace(%.-5000msg){'\s*\[id:[^\]]+\]\s*',''}%n</pattern>
        </encoder>
    </appender>

    <!-- File appender with rolling -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with files like elite-intel.log.2025-09-02 -->
            <fileNamePattern>elite-intel.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days of logs -->
            <maxHistory>30</maxHistory>
            <!-- Optional: limit total size to 2MB -->
            <totalSizeCap>2MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger to include both appenders -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>